{
  "name": "Force mobile.twitter",
  "version": "0.2",
  "description": "Checks URL and redirects as required.",
  "background": { 
     "page":"bg.html"
     },
   "manifest_version": 2,
   "content_scripts": [
   {
     "matches": ["http://twitter.com/*", "https://twitter.com/*"],
     "js": ["content.js"]
   }
   ],
  "permissions": ["tabs"]
}
